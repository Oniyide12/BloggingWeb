@model RolesVM
@{
	ViewBag.Title = "Add Role";
}
<div class="row">
	<div class="col-md-4">
		<form asp-action="AssignRole" method="post">
			<input type="hidden" asp-for="Users.Id" />
			<div class="form-group">
				<label asp-for="@Model.Users.UserName" class="control-label"></label>
				<input asp-for="@Model.Users.UserName" class="form-control" />
				<span asp-validation-for="@Model.Users.UserName" class="text-danger"></span>
				
			</div>
			<div class="form-group">
				<label asp-for="RoleName" class="control-label"></label>
				<select asp-for="RoleName" asp-items="@(new SelectList(Model.Roles,"Name","Name"))" class="form-control">
					<option value="" disabled selected>--Select Roles--</option>
				</select>

				<span asp-validation-for="RoleName" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-primary">Add</button>
			<a asp-action="Index" class="btn btn-secondary text-warning">Back to List</a>
		</form>
	</div>
</div>

